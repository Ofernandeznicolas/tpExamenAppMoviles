        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textDos"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="3. Limitación de Responsabilidad"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textTres"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="4. Uso de la Aplicación"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textCuatro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="5. Modificaciones a los Términos"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textCinco"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
