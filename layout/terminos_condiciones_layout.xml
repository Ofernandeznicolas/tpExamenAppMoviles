<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:layout_margin="20dp"
    android:gravity="">

    <TextView
        android:id="@+id/introducion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Terminos y Condiciones"
        android:gravity="center"
        android:textSize="20sp"
        android:textColor="@color/black"
        android:textStyle="bold"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="Introducción :"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textIntroduccion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="1. No Asesoramiento Financiero"
        android:layout_marginBottom="5dp"
        android:textSize="15sp"
        android:textStyle="italic"
        />

    <TextView
        android:id="@+id/textUno"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="texto"
        android:textSize="10sp"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="left"
        android:text="2. Responsabilidad del Usuario"
