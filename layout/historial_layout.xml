<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:layout_margin="20dp">


    <TextView
        android:id="@+id/historial1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ultimos Registro de comparaciones"
        android:layout_marginTop="15dp"
        android:layout_marginBottom="10dp"
        android:textStyle="bold"
        />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/registro1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro 1"
            android:textSize="12sp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />

        <TextView
            android:id="@+id/registro2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Registro 2"
            android:textSize="12sp"
            android:layout_marginStart="15dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            />


     </LinearLayout>



    <Button
        android:id="@+id/btnPagPrincipal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Paguina Principal"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

    <Button
        android:id="@+id/btnComparar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Realizar una nueva comparacion"
        android:layout_marginEnd="30dp"
        android:layout_marginStart="30dp"
        />

</LinearLayout>
